{
  "version": "0.2",
  "language": "en",
  "dictionaries": ["custom-words"],
  "dictionaryDefinitions": [
    {
      "name": "custom-words",
      "path": "~/.config/nvim/spell/en.utf-8.add",
      "addWords": true
    }
  ],
  "files": ["**/*"],
  "enabledLanguageIds": [
    "markdown",
    "text",
    "plaintext",
    "lua",
    "go",
    "c",
    "cpp",
    "gitcommit"
  ],
  "ignorePaths": [
    "node_modules/**",
    ".git/**",
    "*.log"
  ]
}
